# --- App / Caddy ---
PORT=8000

# --- Mongo root creds (used to initialize mongo on first run) ---
MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=example

# --- App DB config (IMPORTANT: host is the service name "mongo", NOT localhost) ---
MONGODB_DB_NAME=appdb
MONGODB_URL=mongodb://root:example@mongo:27017/appdb?authSource=admin

# --- Your existing app settings ---
ACCESS_TOKEN_EXPIRE_MINUTES=11520
REFRESH_TOKEN_EXPIRE_DAYS=8
MAX_LOGIN_ATTEMPTS=5


# Required
ENVIRONMENT=local
SECRET_KEY=your-secure-random-key-here
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:5173"]

# Optional
LOG_LEVEL=INFO
